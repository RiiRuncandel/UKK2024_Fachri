<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <size android:width="16dp" android:height="16dp"></size>
            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp"></padding>
            <stroke android:width="0.5dp" android:color="#E6E6FA"></stroke>
            <gradient android:angle="90" android:endColor="#0000FF" android:startColor="#00FFFF" android:type="linear"></gradient>
        </shape>
    </item>
    <item>
        <shape>
            <size android:width="16dp" android:height="16dp"></size>
            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp"></padding>
            <stroke android:width="0.5dp" android:color="#E6E6FA"></stroke>
            <gradient android:angle="90" android:endColor="#4169E1" android:startColor="#FFFF00" android:type="linear"></gradient>
        </shape>
    </item>
</selector>